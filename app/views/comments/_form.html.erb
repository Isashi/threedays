<h3>Post a new comment</h3>

<%= form_for [ @place, @comment ] do |f| %>
<div class="row">
<div class="col-sm-1">
<div class="thumbnail">
<%= gravatar_for_comments(current_user) %>
</div><!-- /thumbnail -->
</div><!-- /col-sm-1 -->

<div class="col-sm-10">
<div class="card card-default">
<div class="card-header">
<strong><%= current_user.username %></strong> <span class="text-muted"></span>
</div>
<div class="card-body">
<%= f.text_area :body, class:"form-control", placeholder:"Enter your message" %>
</div><!-- /card-body -->
</div><!-- /card card-default -->
</div><!-- /col-sm-5 -->

</div><!-- /row -->
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
Place creation!

<%= form_for(@place, html: {multipart: true}) do |f| %>
  
  <div class="form-group">
    <label>Title:</label>
    <%= f.text_field :title, placeholder: "Enter Title", class:"form-control" %>
    <small class="form-text text-muted">Please add also the name of the city, ex. "Tour Eiffel - Paris"</small>
  </div>

  <div class="form-group">
    <label>Description:</label>
    <%= f.text_area :description, placeholder: "Enter Description", class:"form-control", id:"exampleFormControlTextarea1", rows:"3" %>
  </div>
	
	<div class="form-row form-group">
    <div class="col-md-6">
      <label>Latitude:</label>
      <%= f.text_field :lat, placeholder: "Enter latitude", class:"form-control" %>
    </div>
    <div class="col-md-6">
      <label>Longitude:</label>
      <%= f.text_field :long, placeholder: "Enter longitude", class:"form-control" %>
    </div>
    <small class="form-text text-muted">(Latitude and Longitude are not mandatory)</small>
  </div>

  <div class="form-group control-group">
    <%= f.label "Pictures:", :class => 'control-label' %>
    <div class="controls">
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </div>
  </div>

	<%= f.submit "Create!", class: "btn btn-primary" %>
<% end %>
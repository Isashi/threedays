<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  <% @place.pictures.each do |picture| %>
    <% if @place.pictures.first == picture %>
	    <div class="carousel-item active">
	    	<%= image_tag(picture.image.url, alt: "Rails logo", class:"d-block w-100 CarouselImg") %>
	  <% else %>
	    <div class="carousel-item">
	    	<%= image_tag(picture.image.url, alt: "Rails logo", class:"d-block w-100 CarouselImg") %>
	  <% end %>
	  <% if user_signed_in? && current_user.id == @place.user_id %>
		  	<div class="carousel-caption d-none d-md-block">
	    		<p>	
	    			<%= link_to "delete", picture, method: :delete,
         	                         		data: { confirm: "You sure?" } %>
  				</p>
  			</div>
  	<% end %>
	    </div>	    
  <% end %>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
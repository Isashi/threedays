<div class="container">
<h1 class="maintitle">Itinerary edit</h1>

<%= form_for(@itinerary, html: {multipart: true}) do |f| %>
  
  <div class="form-group">
    <label>Name:</label>
    <%= f.text_field :name, placeholder: "Enter Name", class:"form-control" %>
  </div>

  <div class="form-group">
    <label>Description:</label>
    <%= f.text_area :description, placeholder: "Enter Description", class:"form-control", id:"exampleFormControlTextarea1", rows:"3" %>
  </div>
  
  <div class="form-row form-group">
    <div class="col-md-6">
      <label>Select a place:</label>
         <%= f.collection_check_boxes(:id, Place.all, :id, :title, {:multiple => true}) %>
    </div>
  </div>

  <%= f.submit "Save changes!", class: "btn btn-orange" %>
<% end %>
</div>
</br>
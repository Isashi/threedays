<div class="container">
<h1 class="maintitle">Itinerary creation</h1>

<%= form_for @itinerary do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </p>

  <p>
  <%= f.label "Select a place:" %><br/>
	<%= f.collection_check_boxes(:id, Place.all, :id, :title, {:multiple => true}) %>
	</p>

  <p>
    <%= f.submit 'Create!', class: "btn btn-orange" %>
  </p>
<% end %>
</div>
</br>
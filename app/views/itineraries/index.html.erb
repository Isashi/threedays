<% provide(:title, 'All itineraries') %>
<h1>All itineraries</h1>
<div class="list-group">
	<ul class="users">
		<% @itinerary.each do |itinerary| %>
			<li class="list-group-item">
				  <%= link_to itinerary.name, itinerary %>

				  <% if user_signed_in? && current_user.id == itinerary.user_id %>
    | 			<%= link_to "Delete", itinerary, method: :delete,
                                  data: { confirm: "You sure?" } %>
    |       <%= link_to "Edit", edit_itinerary_path(itinerary) %></li>

  				<% end %>
			</li>
		<% end %>
	</ul>
</div>